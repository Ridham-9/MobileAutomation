pipeline {
    agent any

    environment {
        ANDROID_HOME = "/home/ridham/Android/Sdk"
        PATH = "/usr/bin/node:${ANDROID_HOME}/tools:${ANDROID_HOME}/platform-tools:${PATH}"
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    // Install python3-venv package
                    sh 'sudo apt-get update && sudo apt-get install -y python3-venv'
                }
            }
        }
        stage('Setup') {
            steps {
                script {
                    // Create virtual environment
                    sh 'python3 -m venv venv'
                    // Activate virtual environment and install dependencies
                    sh '''
                        . venv/bin/activate
                        pip install robotframework robotframework-appiumlibrary
                    '''
                    // Install necessary packages
                    sh 'sudo npm install -g appium'
                    sh 'sudo npm install -g appium-doctor'
                    sh 'appium-doctor --android'
                    sh 'sudo apt-get install android-tools-adb -y'
                }
            }
        }
        stage('Start Appium Server') {
            steps {
                sh 'appium &'
                sleep 10 // Waiting for Appium server to start
            }
        }
        stage('Run Tests') {
            steps {
                script {
                    // Run Robot Framework tests within the activated virtual environment
                    sh '''
                        . venv/bin/activate
                        robot Exercise1/Tests/Calculator.robot
                    '''
                }
            }
        }
    }

    post {
        always {
            // Clean up
            sh 'sudo pkill -f appium || true'
        }
        success {
            echo 'Tests passed!'
        }
        failure {
            echo 'Tests failed.'
        }
    }
}
